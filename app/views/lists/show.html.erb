<div>
  <h2><%= @list.name %></h2>
</div>
<div>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li> <%= bookmark%></li>
      <li> <%= bookmark.comment%></li>
      <li> <%= link_to "Delete bookmark", bookmark_path(bookmark),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
            </li>
    <% end %>
  </ul>
</div>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back to lists", lists_path %>
